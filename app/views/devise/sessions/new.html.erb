  <section class="sign_up_section">
        <div class="bg_img_bx">
          <%= image_tag('bg-img.png',class:"img-fluid")%>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="header_sign_page">
                        <div class="logo">
                           <%= image_tag('logo.png',class:"img-fluid",alt:"logo")%>
                        </div>
                        <div class="header_menu">
                            <a href="#">College Portal</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 sign_up_bx">
                  <% flash.each do |type, msg| %>
                      <div class="alert alert-danger">
                        <%= msg %>
                      </div>
                    <% end %>
                    <div class="form_page_sub_h">Welcome!!</div>
                    <div class="form_page_pink_h">Sign in to Your Account</div>
              
                    <div class="col-12 col-md-6 sign_up_bx">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "ctm-form ctm_signin_form") do |f| %>
                    <div class="ctm-form ctm_signin_form">
                         <div class="mb-3">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control",placeholder: "Email",'aria-describedby': "Email" %>
                          </div>
                          <div class="mb-5">
                            <%= f.password_field :password, autocomplete: "current-password",class: "form-control",placeholder: "Password",'aria-describedby': "Email" %>
                          </div>  
                        <button type="submit" class="btn ctm-form-btn">Log In</button>
                     </div>
                    <% end %>

                    <%= render "devise/shared/links" %>

                  <div class="circle_color_bx">
                    <div class="yellow_circle"></div>
                    <div class="green_circle"></div>
                    <div class="pink_circle"></div>
                  </div>
                  <div class="form_page_sub_h">Don't have an account</div>
                  <div class="form_bottom_link"><a href="/users/sign_up">Sign Up</a></div>
                </div>
            </div>
        </div>
        <!-- <div class="sign_page_wrapper">
            <div class="container">
                
            </div>
            
        </div> -->
    </section>

